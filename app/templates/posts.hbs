<h1>All Posts</h1>
<p style="font-weight: bold;">Total posts: {{@model.length}}</p>
<ul>
    {{#each @model as |post|}}
    <li class="post-data">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p class="card-text">{{post.body}}</p>
            </div>
        </div>
        <p class="btn btn-default" style="font-style: italic;">Mark as favourite</p>
    </li>
    {{/each}}
</ul>